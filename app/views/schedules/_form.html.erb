<h2>Create a New Blogging Schedule for <%= @cohort.name %></h2>

<br>

<%= form_for [@cohort, @schedule] do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Schedule Name' %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>
  
  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="form-group">
    <%= f.label :frequency %>:
    each student should blog once every <%= f.number_field :frequency %> days
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>

