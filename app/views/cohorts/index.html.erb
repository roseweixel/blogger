<h1>Admin Dashboard</h1>
<div class="row">
  <div class="col-md-4">
    <h3>Create a New Cohort</h3>
    
    <%= render 'form' %>
  </div>

  <div class="col-md-5">
    <h3>All Cohorts</h3>

    <%= render @cohorts %>
  </div>

  <div class="col-md-2">
    <h3><%= link_to 'Feature A Post', feature_post_path, class: "btn btn-success" %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h3>Update Holidays</h3>
    <div class="well">
    <%= form_tag '/holidays', method: :post do %>
      <div class="form-group">  
        <%= label_tag "Select Dates" %> 
        <%= text_field_tag 'holidays', nil, class: 'holidays_input form-control', 'data-provide' => "datepicker" %>  
      </div>
      <div class="form-group">  
        <%= submit_tag 'Update', class: 'form-control' %>  
      </div>
    <% end %>
    <div class="form-group">  
      <%= button_to 'Set Holidays to Default', set_default_holidays_path, class: 'form-control' %>  
    </div>
    </div>
  </div>

  <div class="col-md-5">
    <h3>Holidays Currently Set</h3>
    <%= render Holiday.all %>
  </div>
</div>
