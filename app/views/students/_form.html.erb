<%= form_for [student.cohort, student], html: {class: 'form-inline'} do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class:"form-control" %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class:"form-control" %>
  <%= f.label :email %>
  <%= f.text_field :email, class:"form-control" %>
  <%= f.label :github_username %>
  <%= f.text_field :github_username, class:"form-control" %>
  <%= f.hidden_field :cohort_id, value: student.cohort_id %>
  <%= f.submit class:"form-control" %>
<% end %>
