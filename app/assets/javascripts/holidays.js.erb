$(function() {
  if (window.location.href.split("/").pop() === "cohorts" || window.location.href.split("/").pop() === "cohorts#") {
    
    var holidays = gon.holidays.split(" ");
    var dates = []

    holidays.forEach(function(date){
      if (date !== "") {
        dates.push(new Date(date))
      }
    });

    $(".holidays_input").datepicker({
      format: 'mm/dd/yyyy',
      multidate: true,
      multidateSeparator: ', '
    });
    $('.holidays_input').datepicker('setDates', dates);
  }
});
